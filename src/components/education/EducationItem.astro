---
//import Linkdln from "../icons/socials/Linkdln.astro"

interface Props {
  title: string
  company?: string
  description: string
  link?: string
  date: string
}

const { title, description, date } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-10 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-ice dark:text-dark -left-[49px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-ice dark:text-dark">{title}</h3>
      <!---<h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>--->
      <time class="p-0 m-0 text-sm text-zinc-800 dark:text-white/80">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-zinc-800 dark:text-gray-400 md:col-span-3">
    {description}
  </div>
</div>
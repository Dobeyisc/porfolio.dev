---
import { getI18N } from "@/i18n";
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---
<article class="flex flex-col text-center sm:text-start items-center justify-center sm:justify-start gap-8 text-zinc-800 dark:text-[#BEBFC5] md:flex-row">
    <!-- Texto-->
    <div class="[&>p]:mb-4 [&>p>strong]:text-ice [&>p>strong]:font-serif [&>p>strong]:font-medium [&>p>strong]:tracking-normal dark:[&>p>strong]:text-dark text-balance tracking-tight order-2 md:order-1">
        <p 
        set:html={i18n.about[".text"]}
        />
    </div>
    <!-- Img -->
    <img 
    src="/me.webp" 
    alt="Joan Esteban Mendez - fotoUser"
    class="order-1 object-cover h-[160px] min-w-80 p-0 lg:p-2 md:order-2 lg:w-64 aspect-square" 
    decoding="async"
    loading="lazy"
    >
</article>
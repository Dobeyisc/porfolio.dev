---
//Layout
import Layout from '@/layouts/Layout.astro';
//Hero
import Hero from '@/components/hero/Hero.astro'

//Projects
import Projects from '@/components/projects/Projects.astro'
import CodeIcon from '@/components/icons/CodeIcon.astro'
//Education
import Education from '@/components/education/Education.astro'
import SchoolIcon from '@/components/icons/School.astro'
//About-me
import About from '@/components/about-me/About-me.astro'
import UserIcon from '@/components/icons/UserIcon.astro';

import SectionContainer from '@/components/SectionContainer.astro';

//import SelectLanguage from '@/components/SelectLanguage.astro';

//translate
import { getI18N } from '@/i18n';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout title=`${i18n['site.title']} | ${new Date().getFullYear()}` description=`${i18n['site.description']}`>
	<main class="px-4">
		<SectionContainer class="pt-40 pb-18">
			<Hero />
		</SectionContainer>
		<SectionContainer id="proyectos" class="pt-32">
			<h2
			  class="flex items-center justify-center sm:justify-start mb-6 text-3xl font-semibold gap-x-3 text-primary dark:text-white"
			>
			  <CodeIcon class="size-7"/>
			  {i18n.projects['.title']}
			</h2>
			<Projects />
		  </SectionContainer>
		<SectionContainer id="estudios" class="pt-32">
			<h2 class="flex items-center justify-center sm:justify-start mb-6 text-3xl font-semibold gap-x-3 text-primary dark:text-white">
				<SchoolIcon class="size-7" />
				{i18n.study['.title']}
			</h2>
			<Education />
		</SectionContainer>
		<SectionContainer id="sobre-mi" class="pt-32">
			<h2 class="flex items-center justify-center sm:justify-start mb-6 text-3xl font-semibold gap-x-3 text-primary dark:text-white"
			>
				<UserIcon class="size-7"/>
				{i18n.about['.title']}
			</h2>	
			<About />
		</SectionContainer>
		
	</main>
</Layout>